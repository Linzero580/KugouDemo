<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#eee"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/head" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#eee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/id_ll_listen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_listen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="听"
                    android:textColor="#008000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ll_watch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/id_tv_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ll_sing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/id_tv_sing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="唱"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/id_tabline"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:layout_gravity="left"
            android:background="@drawable/tabline" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/customer_selector"
        android:clickable="true"
        android:src="@mipmap/search" />

</LinearLayout>